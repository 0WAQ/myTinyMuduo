    "version": "0.2.0",
    "configurations": [
        {
            "name": "debug EchoServer",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/EchoServer",
            "args": ["127.0.0.1", "5678", "../log"],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Enable non-stop mode",
                    "text": "-geb-set non-stop on",
                    "ignoreFailures": true
                },
                {
                    "description": "Log thread evetns",
                    "text": "-gdb-set print thread-events on",
                    "ignoreFailures": true
                },
                {
                    "description": "Ignore SIGPIPE",
                    "text": "handle SIGPIPE nostop noprint pass",
                    "ignoreFailures": true
                },
                {
                    "description": "Show thread IDs in prompts",
                    "text": "-gdb-set prompt=%tpid> ",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "debug ChatClient",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/ChatClient",
            "args": ["127.0.0.1", "5678"],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Enable non-stop mode",
                    "text": "-geb-set non-stop on",
                    "ignoreFailures": true
                },
                {
                    "description": "Log thread evetns",
                    "text": "-gdb-set print thread-events on",
                    "ignoreFailures": true
                },
                {
                    "description": "Ignore SIGPIPE",
                    "text": "handle SIGPIPE nostop noprint pass",
                    "ignoreFailures": true
                },
                {
                    "description": "Show thread IDs in prompts",
                    "text": "-gdb-set prompt=%tpid> ",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}